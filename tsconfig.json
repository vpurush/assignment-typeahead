{
    "compilerOptions": {
        // "outDir": "./dist/out-tsc",
        "declaration": false,
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types/"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts"
    ],
    "include": [
        "src/public/**/*"
    ],
    // "awesomeTypescriptLoaderOptions": {
    //     "useWebpackText": true,
    //     "useTranspileModule": true,
    //     "doTypeCheck": true,
    //     "forkChecker": true
    // }
}